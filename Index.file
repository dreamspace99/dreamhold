        <!-- ========== ADMIN AD PAGE ========== -->
        <div id="adminAdPage" class="screen">
            <div class="glass-card">
                <div style="display:flex; align-items:center; gap:8px; margin-bottom:15px;">
                    <i class="fas fa-arrow-left" style="font-size:20px; cursor:pointer; color:#ffd700;" onclick="toScreen('adminMenuPage')"></i>
                    <h2 style="margin:0; font-size:18px;">üì¢ Ad Links</h2>
                </div>
                
                <div style="margin-bottom:15px;">
                    <input type="url" id="newAdUrl" placeholder="Monetag Ad URL">
                    <button class="btn-primary" onclick="addAdLink()">‚ûï Add Link</button>
                </div>
                
                <div id="adminAdLinksContainer"></div>
            </div>
        </div>

        <!-- ========== ADMIN USERS PAGE ========== -->
        <div id="adminUsersPage" class="screen">
            <div class="glass-card">
                <div style="display:flex; align-items:center; gap:8px; margin-bottom:15px;">
                    <i class="fas fa-arrow-left" style="font-size:20px; cursor:pointer; color:#ffd700;" onclick="toScreen('adminMenuPage')"></i>
                    <h2 style="margin:0; font-size:18px;">üë• Users</h2>
                </div>
                
                <div style="display:flex; gap:10px; margin-bottom:15px;">
                    <div style="flex:1; text-align:center; background:#1e1e2f; border-radius:16px; padding:12px;">
                        <span style="color:#8b8ba0; font-size:12px;">üí∞ Total Mining</span>
                        <div style="font-size:18px; font-weight:700; color:#ffd700;" id="adminTotalMining">0</div>
                    </div>
                    <div style="flex:1; text-align:center; background:#1e1e2f; border-radius:16px; padding:12px;">
                        <span style="color:#8b8ba0; font-size:12px;">üìÖ Today Mining</span>
                        <div style="font-size:18px; font-weight:700; color:#ffd700;" id="adminTodayMining">0</div>
                    </div>
                </div>
                
                <p style="color:#8b8ba0; font-size:13px; margin-bottom:5px;">‚öôÔ∏è Mining Rate</p>
                <input type="number" id="miningRate" step="0.00000001" value="0.00008">
                <button class="btn-sm" onclick="setMiningRate()">Set Rate</button>
                
                <p style="color:#8b8ba0; font-size:13px; margin:15px 0 5px;">üì¢ Channel Link</p>
                <input type="url" id="channelLink" placeholder="https://t.me/your_channel">
                <button class="btn-sm" onclick="setChannelLink()">Set Channel</button>
            </div>
        </div>

        <!-- ========== ADMIN ADMIN AD PAGE ========== -->
        <div id="adminAdminAdPage" class="screen">
            <div class="glass-card">
                <div style="display:flex; align-items:center; gap:8px; margin-bottom:15px;">
                    <i class="fas fa-arrow-left" style="font-size:20px; cursor:pointer; color:#ffd700;" onclick="toScreen('adminMenuPage')"></i>
                    <h2 style="margin:0; font-size:18px;">üõ°Ô∏è Admin Ad</h2>
                </div>
                
                <button class="btn-primary" onclick="watchAdminAd()">
                    üëÅÔ∏è View Ad
                </button>
                
                <!-- 8 Small Banners -->
                <div class="banner-grid-8" style="margin-top:20px;">
                    <div class="banner banner-small">üì¢ Ad 1</div>
                    <div class="banner banner-small">üì¢ Ad 2</div>
                    <div class="banner banner-small">üì¢ Ad 3</div>
                    <div class="banner banner-small">üì¢ Ad 4</div>
                    <div class="banner banner-small">üì¢ Ad 5</div>
                    <div class="banner banner-small">üì¢ Ad 6</div>
                    <div class="banner banner-small">üì¢ Ad 7</div>
                    <div class="banner banner-small">üì¢ Ad 8</div>
                </div>
            </div>
        </div>

        <!-- ========== BOTTOM NAVIGATION ========== -->
        <nav class="nav-bar" id="mainNav">
            <div class="nav-item" onclick="toScreen('homePage', this)"><i class="fas fa-home"></i>Home</div>
            <div class="nav-item" onclick="toScreen('upgradePage', this)"><i class="fas fa-rocket"></i>Upgrade</div>
            <div class="nav-item" onclick="toScreen('taskPage', this)"><i class="fas fa-tasks"></i>Task</div>
            <div class="nav-item" onclick="toScreen('referPage', this)"><i class="fas fa-users"></i>Refer</div>
            <div class="nav-item" onclick="toScreen('withdrawPage', this)"><i class="fas fa-wallet"></i>Withdraw</div>
            <div id="adminNavItem" class="nav-item" style="display:none;" onclick="toScreen('adminMenuPage', this)"><i class="fas fa-shield-alt"></i>Admin</div>
        </nav>
    </div>

    <!-- FIREBASE SDK -->
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-firestore.js"></script>

    <script>
        // ---------- TELEGRAM INTEGRATION ----------
        const tg = window.Telegram?.WebApp;
        let tgUser = null;
        let isAdmin = false;
        let channelLink = '';
        
        if (tg) {
            tg.expand();
            tg.ready();
            tgUser = tg.initDataUnsafe?.user;
            console.log('Telegram User:', tgUser);
            
            // Check if user is admin (username = Nisaf123)
            if (tgUser && tgUser.username === 'Nisaf123') {
                isAdmin = true;
                console.log('Admin detected!');
            }
        }

        // ---------- FIREBASE CONFIG ----------
        const firebaseConfig = {
            apiKey: "AIzaSyDDBjoA6dAkis4S2FQxYEvS1yoeSEYJZyE",
            authDomain: "dream-space-6e974.firebaseapp.com",
            projectId: "dream-space-6e974",
            storageBucket: "dream-space-6e974.firebasestorage.app",
            messagingSenderId: "650793456147",
            appId: "1:650793456147:web:14c651a51f7093cab3a5e6"
        };
        
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();

        // ---------- GLOBAL VARIABLES ----------
        let uData = null;
        let currentUser = null;
        let miningInterval = null;
        let autoAdInterval = null;
        let usdtBalance = 0;
        let bdtBalance = 0;
        let chargeLevel = 100;
        let extraBatteryUsed = 0;
        let extraBatteryCooldown = 0;
        let adRemoverUsed = 0;
        let adRemoverActive = false;
        let miningRate = 0.00008;
        let isMiningActive = false;
        let isAppVisible = true;
        let totalMiningGlobal = 0;
        let todayMiningGlobal = 0;

        // ---------- AUTO LOGIN WITH TELEGRAM ----------
        async function autoLoginWithTelegram() {
            if (!tgUser) {
                showToast('Please open from Telegram', false);
                return;
            }
            
            const telegramId = tgUser.id.toString();
            const firstName = tgUser.first_name || 'User';
            const lastName = tgUser.last_name || '';
            const username = tgUser.username || '';
            const fullName = `${firstName} ${lastName}`.trim();
            
            try {
                // Check if user exists
                const usersRef = db.collection('users');
                const snapshot = await usersRef.where('telegramId', '==', telegramId).get();
                
                if (snapshot.empty) {
                    // Create new user
                    const myUID = Math.random().toString(36).substring(2,8).toUpperCase();
                    const newUser = {
                        name: fullName,
                        username: username,
                        telegramId: telegramId,
                        balance: 0,
                        slot: 0,
                        total_inc: 0,
                        total_wd: 0,
                        myUID: myUID,
                        isBlocked: false,
                        time: new Date()
                    };
                    
                    const docRef = await db.collection('users').add(newUser);
                    uData = newUser;
                    currentUser = { uid: docRef.id };
                    showToast('‚úÖ Welcome to Dream Space!');
                } else {
                    const doc = snapshot.docs[0];
                    uData = doc.data();
                    currentUser = { uid: doc.id };
                    
                    // Update username if changed
                    if (uData.username !== username) {
                        await doc.ref.update({ username: username });
                        uData.username = username;
                    }
                }
                
                // Show admin nav only if username is Nisaf123
                document.getElementById('mainNav').style.display = 'flex';
                if (username === 'Nisaf123') {
                    document.getElementById('adminNavItem').style.display = 'block';
                    console.log('Admin menu enabled');
                }
                
                updateHomePage();
                
                // Load user's mining data
                await loadUserMiningData();
                
               // Load global mining stats
                await loadGlobalMiningStats();
                
                // Load channel link
                await loadChannelLink();
                
                // Start auto ads
                startAutoAds();
                
            } catch (error) {
                console.error('Auto login error:', error);
                showToast('Login error', false);
            }
        }

        // ---------- LOAD CHANNEL LINK ----------
        async function loadChannelLink() {
            try {
                const doc = await db.collection('config').doc('channel').get();
                if (doc.exists) {
                    channelLink = doc.data().link || '';
                }
            } catch (error) {
                console.error('Error loading channel link:', error);
            }
        }

        // ---------- LOAD GLOBAL MINING STATS ----------
        async function loadGlobalMiningStats() {
            try {
                const doc = await db.collection('stats').doc('mining').get();
                if (doc.exists) {
                    totalMiningGlobal = doc.data().total || 0;
                    todayMiningGlobal = doc.data().today || 0;
                }
            } catch (error) {
                console.error('Error loading mining stats:', error);
            }
        }

        // ---------- LOAD USER MINING DATA ----------
        async function loadUserMiningData() {
            if (!currentUser) return;
            
            try {
                const miningRef = db.collection('mining').doc(currentUser.uid);
                const doc = await miningRef.get();
                
                if (doc.exists) {
                    const data = doc.data();
                    usdtBalance = data.usdt || 0;
                    chargeLevel = data.charge || 100;
                    extraBatteryUsed = data.extraBatteryUsed || 0;
                    adRemoverUsed = data.adRemoverUsed || 0;
                } else {
                    // Create initial mining data
                    await miningRef.set({
                        usdt: 0,
                        charge: 100,
                        extraBatteryUsed: 0,
                        adRemoverUsed: 0,
                        lastUpdate: new Date()
                    });
                }
                
                bdtBalance = usdtBalance * 120;
                updateDisplay();
            } catch (error) {
                console.error('Error loading mining data:', error);
            }
        }

        // ---------- SAVE MINING DATA ----------
        async function saveMiningData() {
            if (!currentUser) return;
            
            try {
                await db.collection('mining').doc(currentUser.uid).set({
                    usdt: usdtBalance,
                    charge: chargeLevel,
                    extraBatteryUsed: extraBatteryUsed,
                    adRemoverUsed: adRemoverUsed,
                    lastUpdate: new Date()
                }, { merge: true });
            } catch (error) {
                console.error('Error saving mining data:', error);
            }
        }

        // ---------- TOAST ----------
        function showToast(msg, isSuccess = true) {
            const toast = document.getElementById('toast');
            toast.style.background = isSuccess ? '#1e1e2f' : '#dc3545';
            toast.innerHTML = msg;
            toast.style.display = 'block';
            setTimeout(() => { toast.style.display = 'none'; }, 3000);
        }

        window.copyTxt = (text) => {
            if (!text) return showToast('Nothing to copy', false);
            navigator.clipboard.writeText(text);
            showToast('‚úÖ Copied!');
        };

        window.toScreen = (id, el) => {
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            
            if (el) {
                document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('nav-active'));
                el.classList.add('nav-active');
            }
        };

         // ---------- MINING SYSTEM ----------
        function startMining() {
            if (miningInterval) clearInterval(miningInterval);
            isMiningActive = true;
            
            miningInterval = setInterval(async () => {
                // Check if banners are visible
                const banners = document.querySelectorAll('.banner');
                let anyBannerVisible = false;
                banners.forEach(b => {
                    const rect = b.getBoundingClientRect();
                    if (rect.top < window.innerHeight && rect.bottom > 0) {
                        anyBannerVisible = true;
                    }
                });
                
                if (!anyBannerVisible || !isAppVisible) {
                    return; // Don't mine if no banners visible or app not visible
                }
                
                if (chargeLevel <= 0) {
                    pauseMining();
                    showToast('üîã Battery empty!', false);
                    return;
                }
                
                usdtBalance += miningRate / 60;
                bdtBalance = usdtBalance * 120;
                chargeLevel = Math.max(0, chargeLevel - (100 / 3600));
                
                updateDisplay();
                await saveMiningData();
            }, 1000);
        }

        function pauseMining() {
            isMiningActive = false;
            if (miningInterval) {
                clearInterval(miningInterval);
                miningInterval = null;
            }
        }

        function updateDisplay() {
            document.getElementById('usdtBalance').innerText = usdtBalance.toFixed(5);
            document.getElementById('bdtBalance').innerText = bdtBalance.toFixed(2);
            document.getElementById('chargeFill').style.width = chargeLevel + '%';
            document.getElementById('chargePercent').innerText = Math.round(chargeLevel) + '%';
        }

        window.handleMiningTap = function() {
            if (!isMiningActive) startMining();
            showToast('‚õèÔ∏è Mining...');
        };

        // ---------- AUTO ADS ----------
        function startAutoAds() {
            if (autoAdInterval) clearInterval(autoAdInterval);
            
            autoAdInterval = setInterval(() => {
                if (adRemoverActive) return; // Don't show ads if ad remover is active
                
                // Show auto ad
                showCountdown(30, () => {
                    // After 30 seconds, return to home
                    toScreen('homePage');
                });
            }, 30 * 60 * 1000); // 30 minutes
        }

        function showCountdown(seconds, callback) {
            const overlay = document.getElementById('countdownOverlay');
            const number = document.getElementById('countdownNumber');
            
            overlay.style.display = 'flex';
            
            let remaining = seconds;
            number.innerText = remaining;
            
            const interval = setInterval(() => {
                remaining--;
                number.innerText = remaining;
                
                if (remaining <= 0) {
                    clearInterval(interval);
                    overlay.style.display = 'none';
                    if (callback) callback();
                }
            }, 1000);
        }

        // ---------- BATTERY ADS ----------
        window.watchBatteryAd = function() {
            showCountdown(30, () => {
                chargeLevel = 100;
                updateDisplay();
                saveMiningData();
                showToast('üîã Battery full!');
                toScreen('homePage');
            });
        };

        window.watchExtraBatteryAd = function() {
            if (extraBatteryUsed >= 5) {
                showToast('‚ùå Max used today', false);
                return;
            }
            if (extraBatteryCooldown > 0) {
                showToast(`‚è≥ Cooldown: ${extraBatteryCooldown}s`, false);
                return;
            }
            
            showCountdown(30, () => {
                extraBatteryUsed++;
                // Add 1 hour of extra time (3600 seconds)
                // We'll just add to charge level
                chargeLevel = 100;
                extraBatteryCooldown = 300;
                
                document.getElementById('extraBatteryUsed').innerText = extraBatteryUsed;
                updateDisplay();
                saveMiningData();
                showToast('‚ö° Extra battery activated!');
                toScreen('homePage');
                
                const cd = setInterval(() => {
                    extraBatteryCooldown--;
                    document.getElementById('extraBatteryCooldown').innerText = extraBatteryCooldown + 's';
                    if (extraBatteryCooldown <= 0) {
                        clearInterval(cd);
                        document.getElementById('extraBatteryCooldown').innerText = 'Ready';
                    }
                }, 1000);
            });
        };

        window.watchAdRemover = function() {
            if (adRemoverUsed >= 2) {
                showToast('‚ùå Max used today', false);
                return;
            }
            
            showCountdown(30, () => {
                adRemoverUsed++;
                adRemoverActive = true;
                document.getElementById('adRemoverUsed').innerText = adRemoverUsed;
                document.getElementById('adRemoverActive').innerText = 'Yes';
                saveMiningData();
                showToast('üõ°Ô∏è Ads removed for 30 min');
                toScreen('homePage');
                
                setTimeout(() => {
                    adRemoverActive = false;
                    document.getElementById('adRemoverActive').innerText = 'No';
                }, 30 * 60 * 1000);
            });
        };

        // ---------- TASK ADS ----------
        let taskCooldown = 0;
        
        window.watchTaskAd = function() {
            if (taskCooldown > 0) {
                showToast(`‚è≥ Wait ${taskCooldown}s`, false);
                return;
            }
            
            showCountdown(30, () => {
                usdtBalance += 0.0002;
                bdtBalance = usdtBalance * 120;
                updateDisplay();
                saveMiningData();
                showToast('‚úÖ +0.0002 USDT');
                
                taskCooldown = 60;
                const cd = setInterval(() => {
                    taskCooldown--;
                    document.getElementById('taskCooldown').innerText = taskCooldown + 's';
                    if (taskCooldown <= 0) {
                        clearInterval(cd);
                        document.getElementById('taskCooldown').innerText = 'ready';
                    }
                }, 1000);
                
                toScreen('homePage');
            });
        };

        // ---------- JOIN CHANNEL ----------
        window.joinChannel = function() {
            if (channelLink) {
                window.open(channelLink, '_blank');
            } else {
                showToast('No channel set', false);
            }
        };

        // ---------- WITHDRAW ----------
        window.requestWithdraw = async () => {
            const method = document.getElementById('withdrawMethod').value;
            const address = document.getElementById('withdrawAddress').value;
            const amount = parseFloat(document.getElementById('withdrawAmount').value);
            
            if (!address || !amount) return showToast('Fill all fields', false);
            
            // Check minimum amount
            if (method === 'bkash' || method === 'nagad') {
                if (amount < 600) return showToast('Minimum 600‡ß≥', false);
                if (amount > bdtBalance) return showToast('Insufficient balance', false);
            } else {
                if (amount < 5) return showToast('Minimum 5$', false);
                if (amount > usdtBalance) return showToast('Insufficient balance', false);
            }
            
            // Deduct from balance
            if (method === 'bkash' || method === 'nagad') {
                bdtBalance -= amount;
                usdtBalance = bdtBalance / 120;
            } else {
                usdtBalance -= amount;
                bdtBalance = usdtBalance * 120;
            }
            updateDisplay();
            await saveMiningData();
            
            // Create withdraw request
            await db.collection('withdraws').add({
                userId: currentUser.uid,
                name: uData.name,
                username: uData.username,
                method: method,
                address: address,
                amount: amount,
                status: 'pending',
                time: new Date()
            });
            
            showToast('‚úÖ Withdraw request sent');
        };

        // ---------- HOME PAGE UPDATE ----------
        function updateHomePage() {
            if (!uData) return;
            document.getElementById('hName').innerText = uData.name || 'User';
            document.getElementById('hUid').innerText = 'UID: ' + (uData.myUID || '------');
        }

        // ---------- COPY REFERRAL LINK ----------
        window.copyReferLink = function() {
            const link = `https://t.me/your_bot?start=${uData?.myUID || ''}`;
            copyTxt(link);
        };

        // ---------- ADMIN FUNCTIONS ----------
        window.addAdLink = async () => {
            if (!isAdmin) {
                showToast('‚ùå Admin only', false);
                return;
            }
            
            const url = document.getElementById('newAdUrl').value;
            if (!url) return showToast('Enter URL', false);
            
            await db.collection('adLinks').add({
                url: url,
                views: 0,
                active: true,
                createdAt: new Date()
            });
            
            showToast('‚úÖ Ad link added');
            document.getElementById('newAdUrl').value = '';
            loadAdminAdLinks();
        };

        window.setMiningRate = () => {
            if (!isAdmin) {
                showToast('‚ùå Admin only', false);
                return;
            }
            
            const rate = parseFloat(document.getElementById('miningRate').value);
            if (rate > 0) {
                miningRate = rate;
                showToast(`‚úÖ Rate set to ${rate}`);
            }
        };

        window.setChannelLink = async () => {
            if (!isAdmin) {
                showToast('‚ùå Admin only', false);
                return;
            }
            
            const link = document.getElementById('channelLink').value;
            if (!link) return showToast('Enter link', false);
            
            await db.collection('config').doc('channel').set({
                link: link
            });
            
            channelLink = link;
            showToast('‚úÖ Channel link set');
        };

        window.watchAdminAd = function() {
            showCountdown(30, () => {
                showToast('üì∫ Admin ad viewed');
                toScreen('homePage');
            });
        };

        window.loadAdminAdLinks = async function() {
            if (!isAdmin) return;
            
            try {
                const snapshot = await db.collection('adLinks').orderBy('createdAt', 'desc').get();
                const container = document.getElementById('adminAdLinksContainer');
                let html = '';
                
                snapshot.forEach(doc => {
                    const link = doc.data();
                    html += `<div class="history-item">
                        <span>${link.url.substring(0,30)}...</span>
                        <span>${link.views}/3 views</span>
                    </div>`;
                });
                
                container.innerHTML = html || '<div class="history-item">No links</div>';
            } catch (error) {
                console.error('Error loading ad links:', error);
            }
        };

        window.loadAdminWithdraws = async function() {
            if (!isAdmin) return;
            
            try {
                const snapshot = await db.collection('withdraws').where('status', '==', 'pending').get();
                const container = document.getElementById('adminWithdrawContainer');
                let html = '';
                
                snapshot.forEach(doc => {
                    const w = doc.data();
                    html += `<div class="history-item">
                        <span>${w.name} - ${w.amount} (${w.method})</span>
                        <button class="btn-sm" onclick="approveWithdraw('${doc.id}')">‚úì</button>
                    </div>`;
                });
                
                container.innerHTML = html || '<div class="history-item">No pending requests</div>';
                document.getElementById('adminWithdrawBadge').innerText = snapshot.size;
            } catch (error) {
                console.error('Error loading withdraws:', error);
            }
        };

        window.loadAdminUsers = async function() {
            if (!isAdmin) return;
            
            // Update mining stats
            document.getElementById('adminTotalMining').innerText = totalMiningGlobal.toFixed(5);
            document.getElementById('adminTodayMining').innerText = todayMiningGlobal.toFixed(5);
        };

        window.approveWithdraw = async (id) => {
            if (!isAdmin) return;
            
            try {
                await db.collection('withdraws').doc(id).update({ status: 'approved' });
                showToast('‚úÖ Withdraw approved');
                loadAdminWithdraws();
            } catch (error) {
                console.error('Error approving withdraw:', error);
            }
        };

        // ---------- APP VISIBILITY ----------
        document.addEventListener('visibilitychange', () => {
            isAppVisible = !document.hidden;
            if (isAppVisible && !miningInterval && chargeLevel > 0) {
                startMining();
            }
        });

        // ---------- INIT ----------
        autoLoginWithTelegram();
    </script>
